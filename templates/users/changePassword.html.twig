{# Szablon formularza zmiany hasła użytkownikowi przez admina #}

{% extends 'base.html.twig' %}

{% block title %}{{ 'title.user_change_password'|trans }}{% endblock %}

{% block body %}
    {% form_theme form with ['bootstrap_3_horizontal_layout.html.twig', 'form/form_errors.html.twig'] %}
    <h1>{{ 'title.user_change_password'|trans }}</h1>

    {% if error is defined and error|length %}
        {% include 'default/_single_alert_message.html.twig' with {
            is_single_message: true,
            is_dismissible: false,
            type: 'danger',
            message: 'error.bad_credentials',
        } %}
    {% endif %}

    <div>
        {{ form_start(form, { method: 'post', action: path('users_password', {'id':userId}) }) }}
        {{ form_widget(form) }}
        <input type="submit" value="{{ 'action.change_password'|trans }}" class="btn btn-success" />
        {{ form_end(form) }}
    </div>
{% endblock %}